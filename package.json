{
  "name": "my-ts-lib",
  "version": "0.1.0",
  "description": "My awesome typescript library",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build-fast": "tsup src/index.ts --format cjs,esm",
    "build": "pnpm run build-fast -- --dts-resolve",
    "test": "pnpm run test:2 && pnpm run test:3",
    "test:2": "vue-demi-switch 2 vue2 && vitest run",
    "test:3": "vue-demi-switch 3 && vitest run",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.0",
    "vue": "^2.6.14 || ^3.2.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "vue-demi": "^0.12.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.8",
    "@vue/composition-api": "^1.4.9",
    "bumpp": "^7.1.1",
    "eslint": "^8.10.0",
    "happy-dom": "^2.46.3",
    "lint-staged": "^12.3.5",
    "simple-git-hooks": "^2.7.0",
    "tsup": "5.11.13",
    "typescript": "4.5.4",
    "vitest": "0.6.0",
    "vue": "^3.2.31",
    "vue2": "npm:vue@2"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
